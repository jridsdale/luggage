l_etc_ppp: l_etc
	@sudo mkdir -vp ${WORK_D}/etc/ppp

pack-etc-ppp: l_etc_ppp
	@sudo ${DITTO} -V /etc/ppp/ ${WORK_D}/etc/ppp/

pack-usr-sbin-netextender: l_usr_sbin
	@sudo ${CP} -v /usr/sbin/netExtender ${WORK_D}/usr/sbin/
	@sudo chown root:wheel ${WORK_D}/usr/sbin/netExtender
	@sudo chmod 755 ${WORK_D}/usr/sbin/netExtender
	
pack-man1-netExtender.1: l_usr_man_man1
	@sudo ${INSTALL} -m 0644 -g wheel -o root netExtender.1 ${WORK_D}/usr/share/man/man1